.common-box {
    color: #343f5e;
    width: 100%;
}
.blue-text {
    color: #3d53fb;
}

.content-box {
    padding: 5% 5% 0 5%;
}

.content-box .header {
    font-size: 36px;
    /*margin: 2% 0 0 5%;*/
}

.content-box .content {
    font-weight: 200;
    padding: 4% 7%;
    color: #000000;
}

.content-box .content .title-box {
    font-size: 48px;
}
.content-box .content .title-box .second-title {
    font-size: 36px;
}
.content-box .content .qr-box {
    background-color: #e4ecf7;
    padding: 2%;
    border: 2px solid #707070;
    text-align: center;
    width: 100%;
}
.content-box .content .qr-box img{
    width: 100%;
    height: 100%;
}
.content-box .content .tips {
    color: #989eb2;
    font-size: 14px;
}